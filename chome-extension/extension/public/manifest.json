{
  "name": "AI Highlights",
  "description": "Get quick summary of your highlights",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "background": {
    "scripts": ["./static/js/background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "storage"],
  "optional_permissions": ["<all_urls>"]
}
